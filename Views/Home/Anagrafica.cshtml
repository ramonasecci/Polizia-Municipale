@{
    ViewData["Title"] = "Dettagli anagrafica";
}

<h2>Anagrafica</h2>

<div class="card mb-3 border-0" style="max-width: 700px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="https://www.creativefabrica.com/wp-content/uploads/2019/02/User-icon-EPS10-by-Kanggraphic-580x386.jpg" class="img-fluid rounded" alt="img user">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h4 class="card-title">@(Model.Nome) @(Model.Cognome)  - @Model.IDAnagrafica</h4>
                <div class="d-flex">
                    <p class="card-text fw-bold me-1">Indirizzo:</p>
                    <p class="card-text">@Model.Indirizzo - @Model.Citta - (@Model.CAP)</p>
                </div>
                <div class="d-flex">
                    <p class="card-text fw-bold me-1">Codice Fiscale:</p>
                    <p class="card-text"><small class="text-body-secondary">@Model.Cod_Fisc</small></p>
                </div>
            </div>
        </div>
    </div>
</div>
