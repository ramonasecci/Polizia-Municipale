@{
    ViewData["Title"] = "Aggiungi Verbale";
}

@model Verbale

<h2 class="my-3">Nuovo Verbale</h2>

<form class="row g-3" >
    <div class="col-md-6">
        <label asp-for="@Model.DataViolazione" class="form-label"></label>
        <input type="date" class="form-control" asp-for="@Model.DataViolazione">
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.DataTrascrizioneVerbale" class="form-label"></label>
        <input type="date" class="form-control" asp-for="@Model.DataTrascrizioneVerbale">
    </div>
    <div class="col-12">
        <label asp-for="@Model.IndirizzoViolazione" class="form-label"></label>
        <input type="text" class="form-control" asp-for="@Model.IndirizzoViolazione" placeholder="1234 Main St">
    </div>
    <div class="col-12">
        <label asp-for="@Model.Nominativo_Agente" class="form-label"></label>
        <input type="text" class="form-control" asp-for="@Model.Nominativo_Agente">
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.Importo" class="form-label"></label>
        <input type="number" class="form-control" asp-for="@Model.Importo">
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.DecurtamentoPunti" class="form-label"></label>
        <input type="number" class="form-control" asp-for="@Model.DecurtamentoPunti">
    </div>

    <div class="col-md-12">
        <div>
            <div>
                <label asp-for="@Model.IDAnagrafica" class="form-label"></label>
                <select id="inputState" class="form-select" asp-for="@Model.IDAnagrafica">
                    <option selected>Choose...</option>
                    @foreach (var utente in ViewBag.Utenti)
                    {
                        <option value="@utente.IDAnagrafica">@(utente.Nome) @(utente.Cognome) - @(utente.Cod_Fisc) </option>
                    }

                </select>

            </div>
       
            <a class="btn btn-outline-secondary my-2">Aggiungi utente</a>
        </div>
        
    </div>


    

    <div class="col-md-4">
        <label asp-for="@Model.Descrizione" class="form-label"></label>
        <select id="inputState" class="form-select" asp-for="@Model.Descrizione">
            <option selected>Choose...</option>
            @foreach (var violazione in ViewBag.Violazioni)
            {
                <option value="@violazione.Descrizione">@violazione.Descrizione</option>
            }
                        
        </select>
    </div>
   
    <div class="col-12">
        <button  class="btn btn-outline-success">Aggiungi</button>
    </div>
</form>
