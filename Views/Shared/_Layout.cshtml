<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PoliziaMunicipale</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PoliziaMunicipale.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light nav-r text-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="d-flex align-items-center">
                    <img src="https://seeklogo.com/images/P/polizia_di_stato-logo-BFD564F339-seeklogo.com.png" alt="Logo" width="23" height="20" class="me-2">
                    <a class="navbar-brand text-white fw-bolder" asp-area="" asp-controller="Home" asp-action="Index">POLIZIA MUNICIPALE</a>

                </div>           
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white fw-normal" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Aggiungi
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item text-black" asp-area="" asp-controller="Home" asp-action="Add">Verbali</a></li>
                                <li><a class="dropdown-item text-black" asp-area="" asp-controller="Home" asp-action="AddAnagrafica">Anagrafica trasgressore</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white fw-normal" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Verbali
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item text-black" asp-area="" asp-controller="Query" asp-action="VerbaliTrasgre">Verbali-Trasgressore</a></li>
                                <li><a class="dropdown-item text-black" asp-area="" asp-controller="Query" asp-action="TrasgrePunti">Punti-Trasgressore</a></li>
                                <li><a class="dropdown-item text-black" asp-area="" asp-controller="Query" asp-action="Punti">Violazioni oltre 10 punti</a></li>
                                <li><a class="dropdown-item text-black" asp-area="" asp-controller="Query" asp-action="FiltroImporto">Violazioni oltre 400€</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container ms-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted text-center">
        <div class="container text-center">
            &copy; 2024 - PoliziaMunicipale - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
