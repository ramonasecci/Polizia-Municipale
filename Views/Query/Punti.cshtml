@{
    ViewData["Title"] = "Verbali oltre i 10 punti decurtati";
}


<h2>Verbali oltre i 10 punti decurtati</h2>

@if (Model is null)
{
    <h3>Non ci sono verbali sul database</h3>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Cognome</th>
                <th scope="col">Data Violazione</th>
                <th scope="col">Importo</th>
                <th scope="col">Decurtamento Punti</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var multa in Model)
            {
                <tr>
                    <td scope="col">@multa.Nome</td>
                    <td scope="col">@multa.Cognome</td>
                    <td scope="col">@multa.DataViolazione.ToShortDateString()</td>
                    <td scope="col">@multa.Importo.ToString("#,0.##") €</td>
                    <td scope="col">@multa.DecurtamentoPunti</td>

                </tr>
            }
        </tbody>
    </table>
}

